<ul data-show={{@show}} ...attributes role="tooltip" class="ember-right-click-menu">
  {{#each @items as |item|}}
    <ListItem
      @item={{item}}
      @closeContextMenu={{@closeContextMenu}}
      @hasAnySubItemList={{this.hasAnySubItemList}}
      @hasBlock={{@hasBlock}}
      as |item|
    >
      {{yield item}}
    </ListItem>
  {{/each}}
</ul>